{
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build && npm run copy-files:windows",
        "build:netlify": "vite build && npm run copy-files:linux",
        "copy-files:windows": "if not exist dist mkdir dist && robocopy public dist /E /NFL /NDL /NJH /NJS /nc /ns /np || exit 0 && copy index.html dist\\",
        "copy-files:linux": "mkdir -p dist && cp -r public/* dist/ && cp index.html dist/",
        "preview": "vite preview"
    },
    "devDependencies": {
        "@vitejs/plugin-vue": "^5.2.1",
        "autoprefixer": "^10.4.17",
        "axios": "^1.7.4",
        "concurrently": "^9.0.1",
        "laravel-vite-plugin": "^1.2.0",
        "postcss": "^8.4.35",
        "postcss-import": "^16.1.0",
        "tailwindcss": "^3.4.1",
        "vite": "^6.0.11"
    },
    "dependencies": {
        "vue": "^3.5.13"
    }
}
